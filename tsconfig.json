{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",

    "allowJs": true,

    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["./dist/**"]
}
